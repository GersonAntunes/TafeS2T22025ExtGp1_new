<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<StackPanel HorizontalAlignment="Center" Margin="10">
			<StackPanel>
				<Image x:Name="abacusImage" Source="/Images/abacus.jpg" Height="123" Width="144"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Margin="5">
				<TextBlock x:Name="universalCalculatorTextBlock" Text="Universal Calculator" FontSize="20"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Margin="5">
				<Button x:Name="mathsCalculatorButton" Content="Maths Calculator" Background="Gray" Width="180" Click="mathsCalculatorButton_Click"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Margin="5">
				<Button x:Name="mortgageCalculatorButton" Content="Mortgage Calculator" Background="Gray" Width="180" Click="mortgageCalculatorButton_Click"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Margin="5">
				<Button x:Name="currencyCalculatorButton" Content="Currency Calculator" Background="Gray" Width="180"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Margin="5">
				<Button x:Name="unitsConverterCalculatorButton" Content="Units Converter Calculator" Background="Gray" Width="180"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Margin="30">
				<Button x:Name="exitButton" Content="Exit" Background="Gray" Width="180"/>
			</StackPanel>
		</StackPanel>
    </Grid>
</Page>
