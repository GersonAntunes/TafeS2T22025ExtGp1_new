<Page
    x:Class="Calculator.UnitConverter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightCyan">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Background="LightCyan">
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10" >
				<TextBlock x:Name="title" Text="Metric to Imperial" FontSize="30"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10">
				<TextBlock Text="Input:" FontSize="20" MinWidth="100" Height="40" TextAlignment="Right"/>
				<TextBox x:Name="inputTextBox" Text="" FontSize="20" MinWidth="100" Height="40"  Background="#66FFFFFF"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Orientation="Vertical" Padding="5">
				<Button x:Name="temperatureButton" Content="Temp:C-F" MinWidth="200" MinHeight="20" Click="temperatureButton_Click"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Padding="5">
				<Button x:Name="distanceButton" Content="Distance:M-Ft" MinWidth="200" MinHeight="20" Click="distanceButton_Click"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Padding="5">
				<Button x:Name="massButton" Content="Mass:Kg-lbs"  MinWidth="200" MinHeight="20" Click="massButton_Click"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Padding="5">
				<Button x:Name="pressureButton" Content="Pressure:Kpa-PSI" MinWidth="200" MinHeight="20" Click="pressureButton_Click"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10">
				<TextBlock Text="Output:" FontSize="20" MinWidth="100" TextAlignment="Right"/>
				<TextBlock x:Name="outputTextBox" Text="" FontSize="20" MinWidth="100" TextAlignment="Center"/>
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10" Margin="10">
				<Button x:Name="switchButton" Content="Switch" MinWidth="80" MinHeight="20" Click="switchButton_Click"/>
				<Button x:Name="backButton" Content="Back" MinWidth="80" MinHeight="20" Click="backButton_Click"/>
			</StackPanel>
		</StackPanel>

    </Grid>
</Page>
